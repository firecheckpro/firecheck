{
  "name": "FireCheck Pro",
  "short_name": "FireCheck",
  "description": "Application de vérification sécurité incendie APSAD R4",
  "start_url": "./index.html",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#1a365d",
  "icons": [
    {
      "src": "./icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "./screenshots/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "categories": ["business", "productivity", "utilities"],
  "shortcuts": [
    {
      "name": "Nouveau client",
      "short_name": "Client",
      "description": "Créer un nouveau client",
      "url": "./index.html?page=clients&action=new",
      "icons": [{ "src": "./icons/shortcut-client.png", "sizes": "96x96" }]
    },
    {
      "name": "Vérifications",
      "short_name": "Vérif",
      "description": "Accéder aux vérifications",
      "url": "./index.html?page=verification",
      "icons": [{ "src": "./icons/shortcut-verify.png", "sizes": "96x96" }]
    },
    {
      "name": "Planning",
      "short_name": "Plan",
      "description": "Voir le planning",
      "url": "./index.html?page=planning",
      "icons": [{ "src": "./icons/shortcut-calendar.png", "sizes": "96x96" }]
    }
  ],
  "prefer_related_applications": false,
  "scope": "./",
  "id": "/firecheck-pro/",
  "protocol_handlers": [
    {
      "protocol": "web+firecheck",
      "url": "./index.html?action=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "application/json": [".json"]
      },
      "name": "Fichiers FireCheck"
    }
  ]
}
